<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtube_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/youtube_view"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="#000000" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/youtube_view">

        <TextView
            android:id="@+id/leconTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:textColor="#000000"
            android:textSize="18sp" />

    </LinearLayout>

    <View
        android:id="@+id/viewId"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/ll"
        android:layout_margin="4sp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:id="@+id/lButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewId"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnQuestion"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#FFF"
            android:text="Poser une Question"
            android:onClick="poserQuestion"
            android:padding="5dp"
            android:textColor="#000"

            />


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lButton"
        android:layout_margin="10sp" />

</RelativeLayout>
